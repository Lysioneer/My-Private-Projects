@model ListingToDos.Models.ViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Add a new ToDo!</title>
</head>
<body>

    @Html.ActionLink("Cancel", "List", "ToDo")
    <h1>New ToDo: </h1>
    <form action="/AddToDo" method="post">
        <label for="title">Title: </label>
        <input type="text" id="title" name="title" />
        <label for="description">Description: </label>
        <input type="text" id="description" name="description" />
        <label for="isUrgent">Is it urgent: </label>
        <input type="checkbox" id="isUrgent" name="isUrgent" value="true"/>
        <label for="assignee">Assignee: </label>
        <select id="assignee" name="assigneeKey">
            @foreach (var assignee in Model.AllAssignees)
            {
                <option value="@assignee.Key">@assignee.Name</option>
            }
        </select>
        <button type="submit">Add</button>
    </form>

</body>
</html>